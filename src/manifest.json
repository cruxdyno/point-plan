{
  "manifest_version": 2,

  "version": "1.2",
  "name": "Point Plan",
  "description": "Adds UI tweaks to pivotaltracker.com",
  "icons": { "128": "bar_chart-128.png" },
  
  "content_scripts": [
    {
      "matches": ["*://www.pivotaltracker.com/*"],
      "js": ["jquery-2.1.1.js", "jquery.powertip.min.js", "content.js"],
      "all_frames": true
    }
  ]
}
